        </dependency>

        <!-- Thêm Jakarta EJB API -->
        <dependency>
            <groupId>jakarta.ejb</groupId>
            <artifactId>jakarta.ejb-api</artifactId>
            <version>4.0.0</version> <!-- Kiểm tra phiên bản tương thích với Jakarta EE 11 -->
